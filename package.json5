{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@bruhno/homepage",
	"description": "My personal portfolio and playground",
	"homepage": "https://bruhno.com",
	"author": "Nicolai Bruhn Lauritsen <mail@bruhno.com> (https://bruhno.com)",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": "^16"
	},
	"browserslist": [
		">0.3%",
		"not ie 11",
		"not dead",
		"not op_mini all"
	],
	"scripts": {
		"dev": "concurrently -p \"[{name}]\" -n \"next,ladle\" -c \"blue,white\" -s \"all\" -k \"true\" \"pnpm dev:next\" \"pnpm dev:ladle\"",
		"dev:ladle": "pnpm ladle serve",
		"dev:next": "next",
		"debug": "cross-env NODE_OPTIONS='--inspect' next dev",
		"build": "concurrently -p \"[{name}]\" -n \"next,sitemap,env,ladle\" -c \"blue,yellow,cyan,white\" -s \"all\" \"pnpm build:next\" \"pnpm build:sitemap\" \"pnpm verify:env\" \"pnpm build:ladle\"",
		// Creates the env entries needed to run. Only runs in production
		"build:env": "node scripts/createEnv.js",
		"build:next": "next build",
		"build:ladle": "pnpm ladle build",
		"build:sitemap": "node scripts/createSitemap.js",
		// Returns a bundle analysis in /public
		"build:analyze": "cross-env ANALYZE_BUILD=true next build",
		// Check if all ENV variables that should be present, are present
		"verify:env": "node scripts/verifyEnv.js",
		// Starts the build nextjs bundle, not the dev server
		"start": "next start",
		"lint": "concurrently -p \"[{name}]\" -n \"eslint,tsc\" -c \"magenta,blue\" -s \"all\" \"pnpm lint:eslint\" \"pnpm lint:tsc\"",
		"lint:eslint": "eslint . --ext js,ts,tsx",
		"lint:tsc": "tsc --project tsconfig.json --noEmit",
		"test": "jest",
		// Prisma generates types based on the schema, not runtime
		"postinstall": "prisma generate",
		"generate-schema": "prisma generate"
	},
	"dependencies": {
		"@emotion/react": "11.10.4",
		"@hookform/resolvers": "2.9.7", // Schema validation for react-hook-form
		"@prisma/client": "4.3.1", // Database ORM
		"@react-aria/focus": "3.8.0",
		"@react-aria/interactions": "3.11.0",
		"@react-hook/media-query": "1.1.1",
		"@react-three/drei": "9.25.3",
		"@react-three/fiber": "8.6.2",
		"@sentry/nextjs": "7.12.1",
		"@sentry/tracing": "7.12.1", // Only used for types not present in @sentry/nextjs
		"@tabler/icons": "1.92.0",
		"argon2": "0.29.1", // Salt & hashing algorithm for passwords
		"cookie": "0.5.0",
		"date-fns": "2.29.2",
		"downshift": "6.1.9", // Package for a11y friendly API for making input fields of type select
		"jsonwebtoken": "8.5.1",
		"lodash": "4.17.21",
		"match-sorter": "6.3.1", // Fuzzy search algorithm
		"next": "12.2.5",
		"next-connect": "0.13.0", // Similar to connect as known from express
		"otplib": "12.0.1", // For implementing 2FA
		"plaiceholder": "2.5.0", // Used for showing loading states for images that are low resolution blur hashes of original
		"qrcode": "1.5.1", // Used in 2FA implementation, server side only
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "7.34.2",
		"react-lite-youtube-embed": "2.3.1", // A more privacy oriented implementation of embedded YouTube videos
		"react-textarea-autosize": "8.3.4",
		"resize-observer-polyfill": "1.5.1",
		"superstruct": "0.16.0",
		"swr": "2.0.0-beta.6",
		"three": "0.143.0",
		"ts-custom-error": "3.2.2",
		"zustand": "4.1.1", // State library
	},
	"devDependencies": {
		"@emotion/eslint-plugin": "11.10.0", // This is only used by ladle for emotion, nextjs includes it in config
		"@ladle/react": "2.4.2", // Component development environment similar to Storybook, just more lightweight
		"@next/bundle-analyzer": "12.2.5",
		"@plaiceholder/next": "2.5.0", // Moves the plaiceholder generation to the main thread
		"@sentry/types": "7.12.1",
		"@types/cookie": "0.5.1",
		"@types/jest": "29.0.0",
		"@types/jsonwebtoken": "8.5.9",
		"@types/lodash": "4.14.184",
		"@types/node": "18.7.14",
		"@types/qrcode": "1.5.0",
		"@types/react": "18.0.18",
		"@types/react-dom": "18.0.6",
		"@types/supertest": "2.0.12",
		"@types/three": "0.144.0",
		"@typescript-eslint/eslint-plugin": "5.36.1",
		"@typescript-eslint/parser": "5.36.1",
		"@vitejs/plugin-react": "2.0.1", // Used by ladle
		"concurrently": "7.3.0", // Used to run several CLI commands at the same time
		"dotenv": "16.0.2",
		"eslint": "8.23.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-next": "12.2.5",
		"eslint-plugin-filenames": "1.3.2",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "27.0.1",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.0.1",
		"eslint-plugin-react": "7.31.5",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-tsdoc": "0.2.16",
		"isomorphic-fetch": "3.0.0",
		"jest": "29.0.2",
		"jest-environment-jsdom": "29.0.2",
		"lodash-webpack-plugin": "0.11.6", // Lodash does not three-shake that well, so we help it to save some bundle size
		"next-pwa": "5.6.0", // Nextjs plugin for adding a Service Worker
		"node-mocks-http": "1.11.0", // Used to test nextjs functions without running a server
		"prisma": "4.3.1", // Database ORM
		"react-inspector": "6.0.1", // Used in ladle
		"supertest": "6.2.4",
		"type-fest": "2.19.0", // Bundle of helper types for TypeScript
		"typescript": "4.8.2",
		"vite": "3.0.9", // Only used by ladle
		"webpack": "5.74.0",
	}
}
